<script src="https://ucarecdn.com/widget/1.0.1/uploadcare/uploadcare-1.0.1.min.js"></script>
<script>
    UPLOADCARE_PUBLIC_KEY = 'demopublickey';
    UPLOADCARE_PATH_VALUE = true;
    UPLOADCARE_PREVIEW_STEP = true;
</script>

<img class="img-rounded" id="uploadcare-preview-{{ field.getKey }}" src="{{ value }}" style="max-width: 30%; float: right;">

<input type="hidden" role="uploadcare-uploader" class="form-control" name="{{ field.getKey }}" id="field-{{ field.getKey }}"
    value="{{ value }}"
    data-locale="en"
    data-tabs="{{ field.getOption('tabs', 'file url facebook gdrive instagram evernote box skydrive') }}"
    data-images-only="true"
    data-path-value="true"
    data-preview-step="true"
    data-clearable="false"
    data-multiple="false"
    data-crop="{{field.getOption('crop/w', 1) }}:{{ field.getOption('crop/h', 1) }} minimum">

<script>
    var widget = uploadcare.Widget('#field-{{ field.getKey }}');
    widget.onUploadComplete(function(info) {
        document.getElementById('uploadcare-preview-{{ field.getKey }}').setAttribute('src', info.cdnUrl);
    });
</script>
