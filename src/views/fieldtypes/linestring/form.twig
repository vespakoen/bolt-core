<div class="form-group{% if errors|length > 0 %} has-error{% endif %}">
    <div id="map" style="width: 100%; height: 500px; {% if errors|length > 0 %} border: 1px solid #b94a48{% endif %}"></div>
    <input type="hidden" name="{{key}}" id="field-{{key}}" value="{{ value }}">

    {% for error in errors %}
    <span class="help-block">{{ __(error) }}</span>
    {% endfor %}
</div>

<script>
    $(document).ready(function() {
        window.lineStringLeafletMap = L.map('map')
            .setView([50.8502, 5.699], 13);

        // add an OpenStreetMap tile layer
        L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(window.lineStringLeafletMap);

        {% if value %}
        var line = {{value|raw}};
        var feature = L.geoJson(line);
        feature.addTo(window.lineStringLeafletMap);
        setTimeout(function() {
            window.lineStringLeafletMap.fitBounds(feature.getBounds());
        }, 0);

        var drawControl = new L.Control.Draw({
            edit: {
                featureGroup: feature,
                remove: false
            },
            draw: false
        });
        window.lineStringLeafletMap.addControl(drawControl);
        {% else %}
        var featureGroup = L.featureGroup().addTo(window.lineStringLeafletMap);
        var drawControl = new L.Control.Draw({
            draw: {
                polyline: true,
                polygon: false,
                rectangle: false,
                circle: false,
                marker: false
            },
            edit: {
                featureGroup: featureGroup,
                remove: false
            }
        });
        window.lineStringLeafletMap.addControl(drawControl);

        window.lineStringLeafletMap.on('draw:created', function(e) {
            featureGroup.addLayer(e.layer)
            var layer = e.layer;
            $('#field-{{key}}').val(JSON.stringify(layer.toGeoJSON().geometry));
        });
        {% endif %}

        window.lineStringLeafletMap.on('draw:edited', function(e) {
            var layers = e.layers;
            layers.eachLayer(function(layer) {
                $('#field-{{key}}').val(JSON.stringify(layer.toGeoJSON().geometry));
            });
        });
    });
</script>
