<div class="form-group{% if errors|length > 0 %} has-error{% endif %}">
    <input type="number"
        {% for attrKey, attrVal in attributes %}
        {{ attrKey }}="{{ attrVal }}"
        {% endfor %}
        value="{{ value }}">

    {% for error in errors %}
    <span class="help-block">{{ __(error) }}</span>
    {% endfor %}
</div>
