<div class="form-group{% if errors|length > 0 %} has-error{% endif %}">
    <div id="map" style="width: 100%; height: 500px; {% if errors|length > 0 %} border: 1px solid #b94a48{% endif %}"></div>
    <input type="hidden"
        {% for attrKey, attrVal in attributes %}
        {{ attrKey }}="{{ attrVal }}"
        {% endfor %}
        value="{{ value }}">

    {% for error in errors %}
    <span class="help-block">{{ __(error) }}</span>
    {% endfor %}
</div>

<script>
    $(document).ready(function() {
        if ( ! window.leafletMaps) {
            window.leafletMaps = {
                'point': {},
                'linestring': {},
                'rectangle': {}
            };
        }

        window.leafletMaps['rectangle']['{{ id }}'] = L.map('map')
            .setView([50.8502, 5.699], 13);

        // add an OpenStreetMap tile layer
        L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(window.leafletMaps['rectangle']['{{ id }}']);

        {% if value %}
        var rectangle = {{value|raw}};
        var feature = L.geoJson(rectangle);
        feature.addTo(window.leafletMaps['rectangle']['{{ id }}']);
        setTimeout(function() {
            window.leafletMaps['rectangle']['{{ id }}'].fitBounds(feature.getBounds());
        }, 0);

        var drawControl = new L.Control.Draw({
            edit: {
                featureGroup: feature,
                remove: false
            },
            draw: false
        });
        window.leafletMaps['rectangle']['{{ id }}'].addControl(drawControl);
        {% else %}
        var featureGroup = L.featureGroup().addTo(window.leafletMaps['rectangle']['{{ id }}']);
        var drawControl = new L.Control.Draw({
            draw: {
                polyline: false,
                polygon: false,
                rectangle: true,
                circle: false,
                marker: false
            },
            edit: {
                featureGroup: featureGroup,
                remove: false
            }
        });
        window.leafletMaps['rectangle']['{{ id }}'].addControl(drawControl);

        window.leafletMaps['rectangle']['{{ id }}'].on('draw:created', function(e) {
            featureGroup.addLayer(e.layer)
            var layer = e.layer;
            $('#{{id}}').val(JSON.stringify(layer.toGeoJSON().geometry));
        });
        {% endif %}

        window.leafletMaps['rectangle']['{{ id }}'].on('draw:edited', function(e) {
            var layers = e.layers;
            layers.eachLayer(function(layer) {
                $('#{{id}}').val(JSON.stringify(layer.toGeoJSON().geometry));
            });
        });
    });
</script>
