{% set attributes = {
    'value': value,
    'size': 16,
    'type': 'text',
    'data-date-format': 'yyyy-mm-dd'
}|merge(attributes)|merge({
    'class': attributes['class'] ~ ' input-sm input-s datepicker-input'
}) %}

<div class="form-group{% if errors|length > 0 %} has-error{% endif %}">
    <input
        {% for attrKey, attrVal in attributes %}
        {{ attrKey }}="{{ attrVal }}"
        {% endfor %}>

    {% for error in errors %}
    <span class="help-block">{{ __(error) }}</span>
    {% endfor %}
</div>
